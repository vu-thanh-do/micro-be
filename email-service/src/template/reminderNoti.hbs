            width: 80px;
            height: 80px;
        }
        .confidential-bar {
            background-color: #f5f5f5;
            padding: 8px 20px;
            color: #666;
            font-size: 12px;
            text-align: right;
            border-top: 1px solid #ddd;
            border-bottom: 1px solid #ddd;
        }
        .title-bar {
            background-color: #a02c2c; /* Urgent red color */
            color: #fff;
            padding: 20px;
            text-align: center;
            margin-top: 15px;
            position: relative;
        }
        .title-bar h2 {
            margin: 0;
            font-weight: 600;
            letter-spacing: 1px;
        }
        .document-seal {
            position: absolute;
            width: 120px;
            right: 0;
            top: 50;
            height: 120px;
            opacity: 0.2;
            pointer-events: none;
          }
        .content {
            padding: 30px 20px;
        }
        .reminder-alert {
            background-color: #ffeaea;
            border: 2px solid #a02c2c;
            padding: 15px;
            margin-bottom: 25px;
            text-align: center;
        }
        .reminder-alert h3 {
            color: #a02c2c;
            margin-top: 0;
        }
        .counter {
            font-size: 18px;
            font-weight: bold;
            color: #a02c2c;
        }
        .info-table {
            width: 100%;
            border-collapse: collapse;
            margin: 25px 0;
        }
        .info-table th, .info-table td {
            padding: 12px;
            border: 1px solid #ddd;
        }
        .info-table th {
            background-color: #f5f5f5;
            text-align: left;
            width: 40%;
            color: #333;
        }
        .button {
            display: inline-block;
            padding: 12px 25px;
            background-color: #a02c2c; /* Urgent red color */
            color: white;
            text-decoration: none;
            border-radius: 4px;
            margin: 20px 0;
            font-weight: bold;
        }
        .button:hover {
            background-color: #8a2424;
        }
        .note {
            background-color: #ffeaea;
            padding: 15px;
            border-left: 4px solid #a02c2c;
            margin-top: 25px;
        }
        .importance {
            color: #a02c2c;
            font-weight: bold;
        }
        .footer {
            margin-top: 40px;
            padding: 15px 20px;
            border-top: 1px solid #ddd;
            font-size: 12px;
            color: #666;
            background-color: #f5f5f5;
        }
        .divider {
            border-top: 1px solid #a02c2c;
            margin: 10px 0;
        }
        .escalation-notice {
            font-weight: bold;
            padding: 10px;
            margin-top: 20px;
            background-color: #fffbcc;
            border: 1px solid #e6db55;
